    <id>com.chutneytesting.idea.chutney-idea-plugin</id>
    <name>Chutney</name>
    <vendor email="support@chutneytesting.com" url="https://github.com/chutney-testing/chutney">ChutneyTesting</vendor>
    <version>0.11.0</version>
    <description><![CDATA[
        <p>A plugin to help you easily edit, run chutney scenario files.</p><br/>
    ]]></description>

